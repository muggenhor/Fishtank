<build xmlns:svn="http://bitten.cmlenz.net/tools/svn"
       xmlns:sh="http://bitten.cmlenz.net/tools/sh"
       xmlns:c="http://bitten.cmlenz.net/tools/c">
	<step id="checkout" description="Checkout source from repository">
		<svn:checkout url="https://svn.il.fontys.nl/usersvn/fishtank/svn"
			path="${path}" revision="${revision}" />
	</step>
	<step id="autogen" description="Generates autoconf and automake scripts">
		<sh:exec file="./autogen.sh" />
	</step>
	<step id="configure" description="Configure the Makefiles for compilation">
		<c:configure enable="debug=relaxed" cflags="-O3" cxxflags="-O3" />
	</step>
	<step id="make" description="Run make to compile">
		<c:make />
	</step>
</build>
